@model IEnumerable<TripListingServiceModel>
@{
    ViewData["Title"] = "All Available Trips";
}

@if (Model.Count() != 0)
{
    <h2>All Available Trips</h2>
    <div>
        @foreach (TripListingServiceModel trip in Model)
        {
            <div class="col-md-4">
                <h3>@trip.Name</h3>
                <table>
                    <tr>
                        <td><label>Subscribed Users</label></td>
                        <td>@trip.SubscribedUsers</td>
                        @*//todo*@
                    </tr>
                </table>
            </div>
        }
    </div>
}
else
{
    <h2>Currently there are no available trips</h2>
}