@model CreateTripViewModel
@{
    ViewData["Title"] = "Create Trip";
}

<h2 class="text-center">Create New Trip</h2>
<div class="container full-page">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Destination"></label>
                <select asp-for="Destination" asp-items="@Model.Countries" class="form-control"></select>
                <span asp-validation-for="Destination" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Company"></label>
                <select asp-for="Company" asp-items="@Model.Companies" class="form-control"></select>
                <span asp-validation-for="Company" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" type="number" min="0" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" type="date" asp-format="MM/dd/yyyy" value="2018/01/01" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" type="date" asp-format="MM/dd/yyyy" value="2018/01/07" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity"></label>
                <input asp-for="Capacity" type="number" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default btn-primary center-block">Create Trip</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>
