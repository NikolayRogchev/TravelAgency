@model EditTripServiceModel
@{
    ViewData["Title"] = "Edit Trip";
}

<h2>Edit Trip Name</h2>
<div class="container full-page">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form method="post" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                    <label asp-for="Trip.Destination"></label>
                    <select asp-for="Trip.Destination" asp-items="Countries" class="form-control"></select>
                    <span asp-validation-for="Trip.Destination" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Trip.CompanyName"></label>
                    <select asp-for="Trip.CompanyName" asp-items="Companies" class="form-control"></select>
                    <span asp-validation-for="Trip.CompanyName" class="text-danger"></span>
                </div>*@
            <div class="form-group">
                <label asp-for="Destination"></label>
                <input asp-for="Destination" type="text" readonly class="form-control" />
                <input type="hidden" asp-for="CompanyId" />
            </div>
            <div class="form-group">
                <label asp-for="CompanyName"></label>
                <input asp-for="CompanyName" type="text" readonly class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" type="number" min="0" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartDate"></label>
                <input asp-for="StartDate" type="date" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate"></label>
                <input asp-for="EndDate" type="date" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Capacity"></label>
                <input asp-for="Capacity" type="number" class="form-control" />
                <span asp-validation-for="Capacity" class="text-danger"></span>
            </div>
            <button asp-area="Company" asp-controller="Trips" asp-action="Edit" type="submit" class="btn btn-default btn-primary center-block">Edit Trip</button>
        </form>
    </div>
    <div class="col-md-4"></div>
</div>
